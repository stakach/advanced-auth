<!DOCTYPE html>
<html>
	<head>
		<title><%= content_for?(:title) ? yield(:title) : Rails.configuration.advanced_auth.login_title %></title>
		<%= stylesheet_link_tag    "advanced_auth/application" %>
		<%= javascript_include_tag "advanced_auth/application" %>
		<%= csrf_meta_tag %>
		<%= yield(:head) %>
	</head>
	<body>
		<div id="container-wrapper">
			<div id="container">
				<% flash.each do |name, msg| %>
					<%= content_tag :div, msg, :id => "flash_#{name}" %>
				<% end %>
				<%= yield %>
			</div>
		</div>
		<iframe src="/acalogin.html"></iframe>
	</body>
</html>
